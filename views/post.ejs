<% include ./partials/header.ejs %>

<div class="w-full  min-h-screen bg-zinc-800 px-4 sm:px-6 lg:px-8 py-8 text-white flex justify-center items-center">
    <div class="card w-full sm:w-3/4 md:w-1/2 lg:w-2/5 xl:w-1/3">
        <div class="w-full bg-zinc-700 rounded-lg overflow-hidden">
            <img class="w-full h-70 object-cover" src="/images/uploads/<%= posts.image %>" alt="img">
        </div>
        <div class="flex items-center justify-between mt-4">
            <a href="#" class="text-2xl sm:text-3xl font-semibold text-white truncate w-4/5"><%=posts.title%></a>
            <a href="/download/<%=posts._id%>" class="text-3xl font-semibold opacity-50"><i class="ri-download-fill"></i></a>
        </div>
        <p class="text-lg sm:text-xl mt-4 opacity-50"><%=posts.description%></p>
    </div>
</div>

<% include ./partials/footer.ejs %>