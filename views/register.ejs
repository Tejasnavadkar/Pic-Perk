<% include ./partials/header.ejs %>

<div class="w-full min-h-screen  bg-zinc-300 flex lg:bg-[url('https://images.unsplash.com/photo-1650034501785-1eacf6564f15?q=80&w=1780&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] items-center justify-center">
  <div class="w-full max-w-md bg-white px-14 py-10  rounded-[30px]">
      <h1 class="lg:text-4xl sm:text-xl mb-8 font-semibold text-zinc-700 tracking-tighter capitalize leading-none text-center">Create New Account</h1>
      <form action="/register" method="post">
          <input class="block border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="fullname" placeholder="Full Name">
