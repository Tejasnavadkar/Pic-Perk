<% include ./partials/header.ejs %>


<div class="profile w-full min-h-screen bg-zinc-800 pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdetails flex flex-col items-center justify-center mt-10 sm:mt-20">
        <div class="relative">
            <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                <i class=" text-zinc-800 ri-pencil-fill"></i>
            </span>
            <div class="w-32 h-32 sm:w-40 sm:h-40 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%=user?.profileImage%>" alt="">
            </div>
        </div>
        <h1 class="text-2xl sm:text-3xl mt-5 font-semibold text-white"><%= user.name %></h1>
        <h3 class="text-md text-white">@<%=user.username%></h3>
        <a href="/add" class="px-8 py-2 rounded-lg bg-red-700 text-sm sm:text-base font-semibold text-white mt-5">Add New Post</a>
    </div>

    <div class="cards flex flex-wrap gap-6 sm:gap-10 px-4 sm:px-10 mt-8 sm:mt-10">
        <div class="card w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5">
            <div class="w-full h-32 sm:h-40 bg-zinc-200 rounded-lg overflow-hidden">
                <% if(user.posts.length > 0){%>
                    <img class="w-full h-full object-cover" src="/images/uploads/<%=user?.posts[0]?.image  %>" alt="">
               <% }%> 
            </div>
            <a href="/show/posts" class="inline-block text-lg text-white mt-3 font-semibold">Your Uploaded Pins</a>
            <h5 class="text-white text-sm font-medium opacity-60"><%=user?.posts?.length%> Pins</h5>
        </div>   
        
        <div class="card w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/5">
            <div class="w-full h-32 sm:h-40 bg-zinc-200 rounded-lg overflow-hidden">
                <% if(user.boards.length > 0){%>
                    <img class="w-full h-full object-cover" src="/images/uploads/<%=user?.boards[0].image  %>" alt="">
               <% }%> 
            </div>
            <a href="/saved/pins" class="inline-block text-lg text-white mt-3 font-semibold">Saved Pins</a>
            <h5 class="text-white text-sm font-medium opacity-60"><%=user?.boards?.length%> Pins</h5>
        </div>
    </div>
    <!-- Add more cards for additional information -->
</div>


<script>
    document.querySelector("#uploadicon").addEventListener("click", function(){// when click select form and click input field
        document.querySelector("#uploadform input").click();
    })

    document.querySelector("#uploadform input").addEventListener("change", function(){// if user change file or upload any file then submit the form
        document.querySelector("#uploadform").submit();
    })
</script>

<% include ./partials/footer.ejs %>